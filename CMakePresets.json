{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "BUILD_DESKTOP_UI": "OFF",
                "BUILD_MOBILE_UI": "OFF",
                "BUILD_TESTS": "OFF",
                "BUILD_BENCHMARKS": "OFF"
            }
        },
        {
            "name": "default",
            "displayName": "Default (Auto-detect Generator)",
            "description": "Default preset - auto-detects available build system",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Release optimized",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "description": "Release with debug symbols",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "debug-ninja",
            "displayName": "Debug (Ninja)",
            "description": "Debug with Ninja generator",
            "inherits": "base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-ninja",
            "displayName": "Release (Ninja)",
            "description": "Release with Ninja",
            "inherits": "base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "release-make",
            "displayName": "Release (Make)",
            "description": "Release with Make",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-make",
            "displayName": "Debug (Make)",
            "description": "Debug with Make",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },                 
        {
            "name": "debug-mingw",
            "displayName": "Debug (MinGW Makefiles)",
            "description": "Debug with MinGW Makefiles (Qt MinGW)",
            "inherits": "base",
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-mingw",
            "displayName": "Release (MinGW Makefiles)",
            "description": "Release with MinGW Makefiles",
            "inherits": "base",
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-vs",
            "displayName": "Debug (Visual Studio)",
            "description": "Debug with Visual Studio generator",
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "release-vs",
            "displayName": "Release (Visual Studio)",
            "description": "Release with Visual Studio",
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "debug-vcpkg",
            "displayName": "Debug (vcpkg)",
            "description": "Debug with vcpkg",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "release-vcpkg",
            "displayName": "Release (vcpkg)",
            "description": "Release with vcpkg",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "debug-homebrew",
            "displayName": "Debug (Homebrew - macOS)",
            "description": "Debug with Homebrew",
            "inherits": "base",
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_PREFIX_PATH": "/opt/homebrew;/usr/local"
            }
        },
        {
            "name": "release-homebrew",
            "displayName": "Release (Homebrew - macOS)",
            "description": "Release with Homebrew",
            "inherits": "base",
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PREFIX_PATH": "/opt/homebrew;/usr/local"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "displayName": "Build Default"
        },
        {
            "name": "debug",
            "configurePreset": "debug",
            "displayName": "Build Debug"
        },
        {
            "name": "release",
            "configurePreset": "release",
            "displayName": "Build Release"
        },
        {
            "name": "relwithdebinfo",
            "configurePreset": "relwithdebinfo",
            "displayName": "Build RelWithDebInfo"
        },
        {
            "name": "debug-ninja",
            "configurePreset": "debug-ninja",
            "displayName": "Build Debug (Ninja)"
        },
        {
            "name": "release-ninja",
            "configurePreset": "release-ninja",
            "displayName": "Build Release (Ninja)"
        },
        {
            "name": "debug-make",
            "configurePreset": "debug-make",
            "displayName": "Build Debug (Make)"
        },
        {
            "name": "release-make",
            "configurePreset": "release-make",
            "displayName": "Build Release (Make)"
        },
        {
            "name": "debug-mingw",
            "configurePreset": "debug-mingw",
            "displayName": "Build Debug (MinGW)"
        },
        {
            "name": "release-mingw",
            "configurePreset": "release-mingw",
            "displayName": "Build Release (MinGW)"
        },
        {
            "name": "debug-vs",
            "configurePreset": "debug-vs",
            "displayName": "Build Debug (VS)"
        },
        {
            "name": "release-vs",
            "configurePreset": "release-vs",
            "displayName": "Build Release (VS)"
        },
        {
            "name": "debug-vcpkg",
            "configurePreset": "debug-vcpkg",
            "displayName": "Build Debug (vcpkg)"
        },
        {
            "name": "release-vcpkg",
            "configurePreset": "release-vcpkg",
            "displayName": "Build Release (vcpkg)"
        },
        {
            "name": "debug-homebrew",
            "configurePreset": "debug-homebrew",
            "displayName": "Build Debug (Homebrew)"
        },
        {
            "name": "release-homebrew",
            "configurePreset": "release-homebrew",
            "displayName": "Build Release (Homebrew)"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}